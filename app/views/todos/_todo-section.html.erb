                <section class="TodoSection">
                    <div class="TodoSectionTitle">
                        <p class="TodoSectionTitle-text">  <%= section_title %> </p>
                        <p class="TodoSectionTitle-remainingCount"><%=todos.completed.count%>/<%= todos.count%></p>
                    </div>

                     <ul>
                       <% todos.each do |todo|%>
                            <li class="TodoItem">
                                <div class="TodoItem-container">
                                    <%= form_with(url: "todos/#{todo.id}", method:"put") do %>
                                   <div class="TodoItem-checkboxContainer" style="display:flex; align-items:center;">
                                    <%if todo.completed%>
                                         <input class="TodoItem-checkbox" name="completed" type="checkbox" onClick= "this.form.submit()" checked>
                                         <p class="TodoItem-todoStrikedText"> <%= todo.todo_text%></p>
                                    <%else%>
                                        <input class="TodoItem-checkbox" name="completed" type="checkbox" onClick= "this.form.submit()">
                                        <%= todo.todo_text%>
                                    <%end%>
                                    </div>
                                    <% end %>
                                    <%if show_due_date%>
                                        <p class="TodoItem-dueDate"> <%= todo.due_date.to_s(:short)%></p>
                                    <%end%>
                                    <a class="TodoItem-delete" href="javascript:void(0)">
                                    <%= form_with(url: "todos/#{todo.id}", method:"delete") do %>
                                        <input type="image" value="delete" src="delete.png">
                                        <% end %>
                                    </a>
                                 </div>
                            </li>
                        <% end%>
                     </ul>

                </section>
